<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:id="@+id/image"
        android:src="@drawable/ic_route_master__logo_"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>


    <me.wangyuwei.particleview.ParticleView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/particleView"
        app:pv_background_color="#fff"
        app:pv_host_text="Route"
        app:pv_host_text_size="24sp"
        app:pv_particle_text="Master"
        app:pv_particle_text_size="30sp"
        app:pv_text_color="#4CAF50"
        app:pv_text_anim_time="2000"
        app:pv_spread_anim_time="2000"
        app:pv_host_text_anim_time="2000" />


</LinearLayout>